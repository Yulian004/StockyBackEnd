<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- Pattern comune per i log -->
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n" />

    <!-- Appender per la console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Appender secondario (users.log) -->
    <appender name="REGISTRAZIONI_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/users.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/users.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Logger per la classe specifica -->
    <logger name="com.generation.stockybackend.services.UserService" level="INFO" additivity="false">
        <appender-ref ref="REGISTRAZIONI_LOG" />
    </logger>

    <!-- Root logger: stampa solo su console -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>
